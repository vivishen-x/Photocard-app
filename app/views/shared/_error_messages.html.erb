<% if @employee.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
Your information contains <%= pluralize(@employee.errors.count, "errors") %>.
  </div>
  <ul>
    <% @employee.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
