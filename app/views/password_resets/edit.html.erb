<% provide(:title, "Reset password") %>
<h1>Reset password</h1>
<div class="container-fluid">
			<div class="row">
				<div class="col-md-3">
				</div>

				<div class="col-md-6">
          <%= form_for(@employee, url: password_resets_path(params[:id])) do |e| %>
            <%= render 'shared/error_messages' %>

            <%= hidden_field_tag :email, @employee.email %>

						<%= e.label :password %>
						<%= e.password_field :password, placeholder: "Reset password", class: 'form-control' %>

            <%= e.label :password_confirmation, "Confirmation" %>
            <%= e.password_field :password_confirmation, placeholder: "Confirm password", class: 'form-control' %>

						<%= e.submit "Update password", class: "btn btn-primary" %>
            <% end %>
				</div>

				<div class="col-md-3">
				</div>
			</div>
</div>
